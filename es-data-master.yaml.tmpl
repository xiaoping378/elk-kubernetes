apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: es-data-master
  labels:
    component: elasticsearch
    role: data
    role: master
spec:
  replicas: ${ES_DATA_REPLICAS}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 0
      maxUnavailable: 1
  template:
    metadata:
      labels:
        component: elasticsearch
        role: data
        role: master
    spec:
      containers:
      - name: es-data-master
        # securityContext:
        #   privileged: true
        #   capabilities:
        #     add:
        #       - IPC_LOCK
        image: kayrus/docker-elasticsearch-kubernetes:2.4.0
        imagePullPolicy: IfNotPresent
        #readinessProbe:
        #  exec:
        #    command:
        #    - curl
        #    - -so /dev/null
        #    - http://elasticsearch-logging:9200/_cluster/health?wait_for_status=green
        #  timeoutSeconds: 30
        #  successThreshold: 3
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: CLUSTER_NAME
          valueFrom:
            configMapKeyRef:
              name: es-env
              key: es-cluster-name
        - name: NUMBER_OF_REPLICAS
          valueFrom:
            configMapKeyRef:
              name: es-env
              key: es-number-of-replicas
        - name: NODE_MASTER
          value: 'true'
        - name: NODE_DATA
          value: 'true'
        - name: HTTP_ENABLE
          value: 'false'
        - name: ES_HEAP_SIZE
          valueFrom:
            configMapKeyRef:
              name: es-env
              key: es-data-heap
        ports:
        - containerPort: 9300
          name: transport
          protocol: TCP
          # Random hostPort to prevent multiple ES data instances on one node
          #hostPort: 28651
        volumeMounts:
        - name: storage
          mountPath: /data
      volumes:
      - name: storage
        emptyDir: {}
